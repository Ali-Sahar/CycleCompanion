<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CycleCompanion.MainPage"
             Background="White">
            

    <StackLayout>
        <Frame Padding="24" CornerRadius="0">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,0">
                    <GradientStop Color="#142872"
                                  Offset="0.1"/>
                    <GradientStop Color="#6B1FF8"
                                  Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>
            <StackLayout>
                <Label Text="Main Menu" HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
            </StackLayout>
        </Frame>
        <Button Text="Inchecken" BackgroundColor="Gray" Clicked="Navigate_Inchecken"/>
        <Button Text="Statistieken" BackgroundColor="Gray"/>
        
    </StackLayout>

</ContentPage>